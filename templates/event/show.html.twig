{% extends 'dashboard/base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h3>Event | <strong>{{ event.name }}</strong></h3>

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td><div class="text-wrap text-smoothing-antialiased">{{ event.description }}</div></td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ event.startDate ? event.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ event.endDate ? event.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Start_time</th>
                <td>{{ event.startTime ? event.startTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End_time</th>
                <td>{{ event.endTime ? event.endTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ event.price }}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ event.discount }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img class="img-fluid border shadow-lg w-250" src="{{ asset('img/events/' ~ event.image) }}" alt="Musician Image">
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('event_index') }}">back to list</a>

    <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
