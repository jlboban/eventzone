{% extends 'home/base.html.twig' %}

{% block title %}{{ musician.name }}{% endblock %}

{% block body %}

<!-- Content wrapper start -->
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="card border">
            <div class="row">
                <div class="col-sm-6">
                    <div class="mw-full">
                        <div class="card p-0 border">
                            <img src="{{ asset('img/musicians/' ~ musician.image) }}" class="img-fluid rounded-top" alt="Musician image">
                            <div class="content">
                                <h1 class="content-title font-weight-bolder text-center">
                                    {{ musician.name }}
                                </h1>
                                <h6 class="content-title font-weight-light text-center">
                                    {% for genre in musician.genre %}
                                    <i class="fas fa-compact-disc"></i> {{ genre.name }} </br>
                                    {% endfor %}
                                </h6>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mw-full">
                        <div class="card p-0 border">
                            <div class="content h100">
                                <iframe src=""
                                        width="100%" frameborder="0" allowtransparency="true" allow="encrypted-media">
                                </iframe>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="card p-0 border">
                        <div class="content font-weight-light long-description">
                            <h1 class="float-left font-weight-bolder">About</h1>
                            {{ musician.description }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Content wrapper end -->

{% endblock %}
