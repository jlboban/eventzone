{% extends 'dashboard/base.html.twig' %}

{% block title %}Musician{% endblock %}

{% block body %}
    <h2>Musician | <strong>{{ musician.name }}</strong></h2>

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ musician.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ musician.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ musician.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td class="w-300">
                    <img class="img-fluid border shadow-lg" src="{{ asset('img/musicians/' ~ musician.image) }}" alt="Musician Image">
                </td>
            </tr>
        </tbody>
    </table>

    {{ include('musician/_delete_form.html.twig') }}

    <div class="btn-group d-flex align-content-center border">
        <a class="btn" href="{{ path('musician_index') }}"><span><i class="fa fa-list" aria-hidden="true"></i></span></a>
        <a class="btn" href="{{ path('musician_edit', {'id': musician.id}) }}"><span><i class="fa fa-edit" aria-hidden="true"></i></span></a>
        <button class="btn btn-danger text-dark" form="musician-delete"><span><i class="fa fa-trash" aria-hidden="true"></i></span></button>
    </div>

{% endblock %}
