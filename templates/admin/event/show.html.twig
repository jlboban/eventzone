{% extends 'admin/dashboard/base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h3>Event | <strong>{{ event.name }}</strong></h3>

    <table class="table table-striped table-responsive table-hover">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td style="max-width: 40rem; word-break: break-word; text-overflow: ellipsis;">{{ event.description }}</td>
            </tr>
            <tr>
                <th>Start Date</th>
                <td>{{ event.startDate ? event.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End Date</th>
                <td>{{ event.endDate ? event.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Start Time</th>
                <td>{{ event.startTime ? event.startTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End Time</th>
                <td>{{ event.endTime ? event.endTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ event.price }}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ event.discount }}</td>
            </tr>
            <tr>
                <th>Discount Begin</th>
                <td>{{ event.discountBegin }}</td>
            </tr>
            <tr>
                <th>Discount End</th>
                <td>{{ event.discountEnd }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img class="img-fluid border shadow-lg table-image" src="{{ asset('img/events/' ~ event.image) }}" alt="Musician Image">
                </td>
            </tr>
        </tbody>
    </table>

    {{ include('admin/event/_delete_form.html.twig') }}

    <div class="btn-group d-flex align-content-center border">
        <a class="btn" href="{{ path('admin_event_index') }}"><span><i class="fa fa-list" aria-hidden="true"></i></span></a>
        <a class="btn" href="{{ path('event_edit', {'id': event.id}) }}"><span><i class="fa fa-edit" aria-hidden="true"></i></span></a>
        <button class="btn btn-danger text-dark" form="event-delete-{{ event.id }}"><span><i class="fa fa-trash" aria-hidden="true"></i></span></button>
    </div>

{% endblock %}
