{% extends 'admin/dashboard/base.html.twig' %}

{% block title %}Musician{% endblock %}

{% block body %}
    <h3>
        <i class="fas fa-music" aria-hidden="true"></i>
        Musician | <strong>{{ musician.name }}</strong>
    </h3>

    <table class="table table-striped table-responsive table-hover">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ musician.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ musician.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td class="long-description">{{ musician.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img class="img-fluid border shadow-lg table-image" src="{{ asset('img/musicians/' ~ musician.image) }}" alt="Musician Image">
                </td>
            </tr>
        </tbody>
    </table>

    {{ include('admin/musician/_delete_form.html.twig') }}

    <div class="btn-group d-flex align-content-center border">
        <a class="btn" href="{{ path('admin_musician_index') }}"><span><i class="fa fa-list" aria-hidden="true"></i></span></a>
        <a class="btn" href="{{ path('musician_edit', {'id': musician.id}) }}"><span><i class="fa fa-edit" aria-hidden="true"></i></span></a>
        <button class="btn btn-danger text-dark" form="musician-delete-{{ musician.id }}"><span><i class="fa fa-trash" aria-hidden="true"></i></span></button>
    </div>

{% endblock %}
