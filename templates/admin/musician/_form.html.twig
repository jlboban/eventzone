<div class="container-fluid">
    <div class="row row-eq-spacing-lg">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <div class="content">
                {{ form_start(form) }}

                <!-- Name -->
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                </div>

                <!-- Description -->
                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                </div>

                <!-- Image -->
                {% do form.image.setRendered() %}
                <label class="font-weight-bold required">Image</label>
                <div class="custom-file pb-20">
                    <input type="file" id="file-input" name="musician[image]" data-default-value="No image chosen">
                    <label for="file-input" style="width: 100%; text-align: center;">Choose an image</label>
                </div>

                <!-- Genres -->
                <div class="form-group">
                    {{ form_label(form.genre) }}
                    {{ form_widget(form.genre) }}
                </div>

                <button class="btn btn-block border shadow btn-event">{{ button_label|default('Save') }}</button>
                {{ form_end(form) }}
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>
