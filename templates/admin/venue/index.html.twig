{% extends 'admin/dashboard/base.html.twig' %}

{% block title %}Venues{% endblock %}

{% block body %}

<h1 class="text-center"><i class="fas fa-map-marked-alt" aria-hidden="true"></i> Venue List</h1>

<table class="table table-striped table-responsive table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Capacity</th>

            <th>Country</th>
            <th class="text-center">Image</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for venue in venues %}
        <tr>
            <td>{{ venue.id }}</td>
            <td>{{ venue.name }}</td>
            <td>{{ venue.capacity }}</td>

            <td>{{ venue.country }}</td>
            <td class="d-flex justify-content-center">
                <img class="img-fluid border shadow-lg table-image" src="{{ asset('img/venues/' ~ venue.image) }}" alt="Venue Image">
            </td>
            <td>
                <div class="btn-group-vertical d-flex align-content-center">
                    <a href="{{ path('admin_venue_show', { id: venue.id }) }}" class="btn btn-square">
                        <span><i class="fa fa-eye" aria-hidden="true"></i></span>
                    </a>
                    <a href="{{ path('venue_edit', { id: venue.id }) }}" class="btn btn-square">
                        <span><i class="fa fa-edit" aria-hidden="true"></i></span>
                    </a>

                    {{ include('admin/venue/_delete_form.html.twig') }}

                    <button class="btn btn-square btn-danger text-dark" form="venue-delete-{{ venue.id }}">
                        <span><i class="fa fa-trash" aria-hidden="true"></i></span>
                    </button>
                </div>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="6">No records found.</td>
        </tr>
    {% endfor %}
    <tr>
    </tbody>
</table>

{% endblock %}
