{% extends 'admin/dashboard/base.html.twig' %}

{% block title %}Venue{% endblock %}

{% block body %}
    <h3>
        <i class="fas fa-map-marked-alt" aria-hidden="true"></i>
        Venue | <strong>{{ venue.name }}</strong>
    </h3>

    <table class="table table-striped table-responsive table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ venue.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ venue.name }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ venue.capacity }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ venue.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ venue.city }}</td>
            </tr>
            <tr>
                <th>Postcode</th>
                <td>{{ venue.postcode }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ venue.country }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img class="img-fluid border shadow-lg table-image" src="{{ asset('img/venues/' ~ venue.image) }}" alt="Musician Image">
                </td>
            </tr>
        </tbody>
    </table>

    {{ include('admin/venue/_delete_form.html.twig') }}

    <div class="btn-group d-flex align-content-center border">
        <a class="btn" href="{{ path('admin_venue_index') }}"><span><i class="fa fa-list" aria-hidden="true"></i></span></a>
        <a class="btn" href="{{ path('venue_edit', {'id': venue.id}) }}"><span><i class="fa fa-edit" aria-hidden="true"></i></span></a>
        <button class="btn btn-danger text-dark" form="venue-delete-{{ venue.id }}"><span><i class="fa fa-trash" aria-hidden="true"></i></span></button>
    </div>

{% endblock %}
