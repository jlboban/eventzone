{% extends 'admin/dashboard/base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}

<h1 class="text-center"><i class="fa fa-user-shield" aria-hidden="true"></i> Admin List</h1>

<table class="table table-striped table-responsive table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>

    <tbody>
    {% for admin in admins %}
        <tr>
            <th>{{ admin.id }}</th>
            <td>{{ admin.firstName }}</td>
            <td>{{ admin.lastName }}</td>
            <td>{{ admin.email }}</td>
            <td>
                <div class="btn-group d-flex align-content-center">
                    <a href="{{ path('admin_show', { id: admin.id }) }}" class="btn btn-square">
                        <span><i class="fa fa-eye" aria-hidden="true"></i></span>
                    </a>
                    <a href="{{ path('admin_edit', { id: admin.id }) }}" class="btn btn-square">
                        <span><i class="fa fa-edit" aria-hidden="true"></i></span>
                    </a>

                    {{ include('admin/_delete_form.html.twig') }}

                    <button class="btn btn-square btn-danger text-dark" form="admin-delete-{{ admin.id }}">
                        <span><i class="fa fa-trash" aria-hidden="true"></i></span>
                    </button>
                </div>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5">No records found.</td>
        </tr>
    {% endfor %}
    <tr>
    </tbody>

</table>

{% endblock %}
