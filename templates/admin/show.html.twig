{% extends 'dashboard/base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    <h2>Admin | <strong>{{ admin.firstName }} {{ admin.lastName }}</strong></h2>

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ admin.id }}</td>
            </tr>
            <tr>
                <th>First Name</th>
                <td>{{ admin.firstName }}</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>{{ admin.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ admin.email }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('admin/_delete_form.html.twig') }}

    <div class="btn-group d-flex align-content-center border">
        <a class="btn" href="{{ path('admin_index') }}"><span><i class="fa fa-list" aria-hidden="true"></i></span></a>
        <a class="btn" href="{{ path('admin_edit', {'id': admin.id}) }}"><span><i class="fa fa-edit" aria-hidden="true"></i></span></a>
        <button class="btn btn-danger text-dark" form="admin-delete"><span><i class="fa fa-trash" aria-hidden="true"></i></span></button>
    </div>

{% endblock %}
