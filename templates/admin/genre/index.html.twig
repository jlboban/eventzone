{% extends 'admin/dashboard/base.html.twig' %}

{% block title %}Genre{% endblock %}

{% block body %}

    <h1 class="text-center"><i class="fa fa-guitar" aria-hidden="true"></i> Genre List</h1>

    <table class="table table-striped table-responsive table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th class="text-center">Actions</th>
        </tr>
        </thead>

        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.id }}</td>
                <td>{{ genre.name }}</td>
                <td>
                    <div class="btn-group d-flex align-content-center">
                        <a href="{{ path('genre_edit', { id: genre.id }) }}" class="btn btn-square">
                            <span><i class="fa fa-edit" aria-hidden="true"></i></span>
                        </a>

                        {{ include('admin/genre/_delete_form.html.twig') }}

                        <button class="btn btn-square btn-danger text-dark" form="genre-delete-{{ genre.id }}">
                            <span><i class="fa fa-trash" aria-hidden="true"></i></span>
                        </button>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No records found.</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

{% endblock %}